@model Garage_2_Group_1.Models.UserViewModels.UserDetailsViewModel
@inject IParkingService parkingService

<div id="parkedCars" class="container mt-5">
    <div class="row">
        <div class="row">

            @foreach (var item in Model.Vehicles)
            {

                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <parked reg-nr=@item.RegNr></parked>
                        <div class="card-header">@Html.DisplayNameFor(model => model.RegNr): @Html.DisplayFor(modelItem => item.RegNr)</div>
                        <div class="card-header">@Html.DisplayNameFor(model => model.VehicleType): @Html.DisplayFor(modelItem => item.VehicleType.Name)</div>
                        <div class="card-header">@Html.DisplayNameFor(model => model.Make): @Html.DisplayFor(modelItem => item.Make)</div>
                        <div class="card-header">@Html.DisplayNameFor(model => model.Model): @Html.DisplayFor(modelItem => item.Model)</div>
                        <div class="card-body text-center">
                            <a asp-action="Edit" asp-controller="Vehicles" asp-route-id="@item.RegNr" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-controller="Vehicles" asp-route-id="@item.RegNr" class="btn btn-primary">Details</a>
                            <poc reg-nr=@item.RegNr type-id=@item.VehicleTypeID></poc>
                        </div>
                    </div>
                </div>
                @if (item.ParkingSlots.Count == 0)
                {
                    <vc:park reg-nr=@item.RegNr id="vc-park"></vc:park>
                }
                @if (item.ParkingSlots.Count > 0)
                {
                    <vc:checkout reg-nr=@item.RegNr></vc:checkout>
                }
            }
        </div>
    </div>
</div>
