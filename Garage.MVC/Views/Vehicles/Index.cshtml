@model IEnumerable<Garage.Entities.Vehicles.Vehicle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Register Your Vehicle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Parking Data
                <th>
                @Html.DisplayNameFor(model => model.User.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingSlots)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Avatar)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingSlots)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegNr">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RegNr">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RegNr">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
