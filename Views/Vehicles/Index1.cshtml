@using Garage_2_Group_1.Models.ViewModels
@model VehicleIndexViewModel

@{
    ViewData["Title"] = "Index1";
}

<h1>Parked Vehicles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>




<form asp-action="Filter2">
    <div class="input-group mb-3">
        <input type="text" class="form-control" asp-for="RegNr"  placeholder="Search..." />
        <div class="input-group-append">
            <select class="form-control" asp-for="Type"  asp-items="@Model.Types">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search">&emsp;Search</i></button>
        </div>
    </div>
</form>

<partial name="VehiclePartial" model="@Model.Vehicles" />