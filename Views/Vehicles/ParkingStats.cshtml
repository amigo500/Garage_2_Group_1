@model ParkingStatsViewModel

@{
    ViewData["Title"] = "ParkingStats";
    Layout = "_Layout";

}


<h4 class="m-2 p-2">Amount of vehicles by type</h4>


<table class="table table-striped table-dark table-hover">
    <thead> <class="thead-dark">
        <tr>
            <th scope="col">Vehicle Type</th>
            <th scope="col">Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in Model.VehicleTypesData)
        {
            @if (type.Value != 0)
            {
                <tr>
                    <td class="py-0">@Html.DisplayFor(modelType => type.Key)</td>
                    <td class="py-0">@Html.DisplayFor(modelType => type.Value)</td>
                </tr>
            }
        }
    </tbody>
</table>

<ul class="col">
    <li class="row">
        <label asp-for="WheelCount" class="control-label"></label>
        <div class="col">
            @Model.WheelCount
        </div>
    </li>
    <li class="row">
        <label asp-for="TotalRevenue" class="control-label"></label>
        <div class="col">
            @Html.DisplayFor(Model => Model.TotalRevenue)
        </div>
    </li>
    </ul>



<div>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
